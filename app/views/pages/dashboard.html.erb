
<head>
  <title>My Dashboard</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <style>
    /* Your SCSS styles here */
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      padding: 20px;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1 {
      font-size: 24px;
      margin-bottom: 20px;
      color: #333;
      text-align: center;
    }

    h2 {
      font-size: 20px;
      margin-top: 30px;
      margin-bottom: 15px;
      color: #555;
      text-align: center;
    }

    .card-container {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      margin-bottom: 20px;
    }

    .card {
      background-color: #fff;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      margin: 10px;
      padding: 15px;
      min-width: 300px;
    }

    .card-body {
      padding: 10px;
    }

    .card-title {
      font-size: 18px;
      margin-bottom: 10px;
      color: #333;
    }

    .card-text {
      color: #666;
    }

    .no-bookings {
      color: #999;
      margin-top: 20px;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>My Dashboard</h1>

    <% if current_user.bookings.present? %>
      <h2>My Bookings</h2>
      <div class="card-container">
        <% current_user.bookings.each do |booking| %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= booking.bike.description %></h5>
              <p class="card-text"><strong>Start Date:</strong> <%= booking.start_date %></p>
              <p class="card-text"><strong>End Date:</strong> <%= booking.end_date %></p>
              <p class="card-text"><strong>Status:</strong> <%= booking.bike.user == current_user ? 'Confirmed' : 'Pending Confirmation' %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="no-bookings">No bookings found.</p>
    <% end %>
  </div>
